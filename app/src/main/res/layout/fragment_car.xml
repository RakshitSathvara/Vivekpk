<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9E8"
    tools:context="in.vaksys.vivekpk.fragments.CarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/carRecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:fadeScrollbars="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbars="vertical" />

        <include
            android:id="@+id/add_car_detail"
            layout="@layout/enter_car_details" />

        <LinearLayout
            android:id="@+id/AddVehicleBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <Button
                android:id="@+id/btn_addVVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableLeft="@drawable/add_button_gallery"
                android:drawablePadding="15dp"
                android:gravity="center"

                android:text="Add Vehicle"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
